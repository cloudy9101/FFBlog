<% provide(:title, '注册') %>
<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<div class="panel panel-primary">
			<div class="panel-heading"><h4>注册新用户</h4></div>
			<div class="panel-body">
				<%= form_for @user, html: { class: "form-horizontal", role: "form" } do |f| %>
					<div class="form-group">
						<%= f.label :name, "用户名", class: "col-sm-4 control-label" %>
						<%= f.text_field :name, class: "col-sm-4" %>
					</div>
					<div class="form-group">
						<%= f.label :email, "Email", class: "col-sm-4 control-label" %>
						<%= f.text_field :email, class: "col-sm-4" %>
					</div>
					<div class="form-group">
						<%= f.label :password, "密码", class: "col-sm-4 control-label" %>
						<%= f.password_field :password, class: "col-sm-4" %>
					</div>
					<div class="form-group">						
						<%= f.label :password, '确认密码', class: "col-sm-4 control-label" %>
						<%= f.password_field :password_confirmation, class: "col-sm-4" %>
					</div>
					<div class="form-group">						
						<%= f.submit '提交注册信息', class: "col-sm-3 col-sm-offset-4 btn btn-primary" %>
						<%= link_to '已有账号？请登录', signin_path, class: "col-sm-3 col-sm-offset-1 btn" %>
					</div>
					
					
				<% end %>
			</div>
		</div>
	</div>
</div>
