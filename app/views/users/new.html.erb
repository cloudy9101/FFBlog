<% provide(:title, 'Register') %>
<h1>Register</h1>
<div>
	<%= form_for @user do |f|%>
		<%= f.label :name %>
		<%= f.text_field :name %>
		<br>
		<%= f.label :email %>
		<%= f.text_field :email %>
		<br>
		<%= f.label :password %>
		<%= f.password_field :password %>
		<br>
		<%= f.label :password, 'Confirmation' %>
		<%= f.password_field :password_confirmation %>
		<br>
		<%= f.submit 'Create Account' %>
	<% end %>
</div>