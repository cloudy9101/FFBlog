<% provide(:title, '全部文章') %>
<div class="row">
	<div class="col-md-8">
		<div class="page-header"><h1>全部文章</h1></div>
		<div class="list-group">
			<% @posts.each do |post| %>
				<li class="list-group-item">
					<h3><%= link_to post.title, post_path(post) %></h3>
					<p><span class="glyphicon glyphicon-user"></span> <%= link_to post.user.name, user_path(post.user) %> 发布于 <%= time_tag post.updated_at %> 
					<% if post.user == current_user %>
						<%= link_to '删除', post_path(post), method: :delete, data: { confirm: "确认删除？" } %>
					<% end %></p>
				</li>
			<% end %>
		</div>
	</div>
	<div class="col-md-4">
		<div class="panel panel-info">
			<div class="panel-heading">会员信息</div>
			<div class="panel-body center">
				<% if signed_in? %>
					<h1><%= current_user.name %></h1>
					<h3><%= current_user.email %></h3>
					<br>
					<h4><%= link_to '撰写新文章', new_post_path %></h4>
				<% else %>
					<p><span class="glyphicon glyphicon-user"></span></p>
					<h4><%= link_to '登陆', signin_path %> | <%= link_to '注册', signup_path %></h4>
				<% end %>
			</div>
		</div>
	</div>
</div>
