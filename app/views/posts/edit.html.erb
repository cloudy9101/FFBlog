<% provide(:title, "编辑文章") %>

<div class="row">
	<div class="col-md-8 col-md-offset-2">
		<div class="page-header"><h2>编辑文章</h2></div>
		<%= form_for :post, url: post_path(@post), method: :patch do |f| %>
			<div class="form-group">
				<div class="input-group input-group-lg">
					<div class="input-group-addon">标题</div>
					<%= f.text_field :title, class: "form-control" %>
				</div>
			</div>
			<div class="form-group">
					<%= f.text_area :text, size: "20x20", class: "form-control" %>
			</div>
			<div class="from-group"><%= f.submit "更新文章", class: "btn btn-primary btn-lg col-md-4 col-md-offset-4" %></div>
		<% end %>
	</div>
</div>