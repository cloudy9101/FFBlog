<% provide(:title, 'New post') %>
<div class="row">
	<div class="col-md-8">
		<h1>发布新文章</h1>
		<%= form_for @post, html: { class: "form-horizontal", role: "form" } do |f| %>
			<% if @post.errors.any? %>
				<ul class="list-group">
				<% @post.errors.full_messages.each do |msg| %>
					<li class="list-group-item list-group-item-danger"><%= msg %></li>
				<% end %>
				</ul>
			<% end %>
			<div class="form-group">
				<div class="input-group input-group-lg">
					<div class="input-group-addon">标题</div>
					<%= f.text_field :title, class: "form-control" %>
				</div>
			</div>
			<div class="form-group">
					<%= f.cktext_area :text, :cols => 40, :ckeditor => {:uiColor => '#cccccc', :toolbar => 'mini', height: '400'} %>
			</div>
			<div class="from-group"><%= f.submit "发布新文章", class: "btn btn-primary btn-lg col-md-4 col-md-offset-4" %></div>
		<% end %>
	</div>
	<%= render 'layouts/sidebar' %>
</div>
