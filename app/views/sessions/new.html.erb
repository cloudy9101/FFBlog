<% provide(:title, '登陆') %>
<div class="row">
	<div class="col-md-4 col-md-offset-4">
		<div class="panel panel-primary">
			<div class="panel-heading"><h4>登陆</h4></div>
			<div class="panel-body">
				<%= form_for :sessions, url: sessions_path, html: { class: "form-horizontal", role: "form"} do |f| %>
					<% flash.each do |name, msg| %>
						<div class="alert alert-<%= name %> "><%= msg %></div>
					<% end %>
					<div class="form-group">
						<%= f.label :email, class: "col-sm-4 control-label" %>
						<%= f.text_field :email, class: "col-sm-6" %>
					</div>
					<div class="form-group">
						<%= f.label :password, "密码", class: "col-sm-4 control-label" %>
						<%= f.password_field :password, class: "col-sm-6" %>
					</div>
					<div class="form-group">
						<%= f.submit '登陆', class: "btn btn-primary col-sm-2 col-sm-offset-5"%>
						<%= link_to "没有账号？请注册", signup_path, class: "col-sm-4 btn" %>
					</div>
				<% end %>
			</div>
		</div>
	</div>
</div>
